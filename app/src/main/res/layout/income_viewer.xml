<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventViewer.NoteViewer">

    <ScrollView
        android:id="@+id/noteViewScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventVirietyPreview"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/note_icon" />

            <TextView
                android:id="@+id/spendAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount spent"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/noteData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/imagesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Images:" />

            <ListView
                android:id="@+id/imageDisplayHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/rangesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ranges:" />

            <ListView
                android:id="@+id/ranges"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/commitChanges"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/revisionMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/revisionMenu"
        android:name="com.github.heronerin.secureroute.tabs.addPages.AddNoteFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white_maybe"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>